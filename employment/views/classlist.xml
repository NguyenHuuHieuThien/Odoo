<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="classlist_act" model="ir.actions.act_window">
            <field name="name">Danh Sách Khóa Học</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">classlist.educate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Danh sách lớp
                </p>
            </field>
        </record>
        <record id="mylib_classlist_tree" model="ir.ui.view">
            <field name="name">Danh Sách Khóa Học</field>
            <field name="model">classlist.educate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="startday"/>
                    <field name="endday"/>
                    <field name="mentor"/>
                    <field name="content"/>
                    <field name="capacity"/>
                    <field name="nbofweek"/>
                    <field name="time"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>